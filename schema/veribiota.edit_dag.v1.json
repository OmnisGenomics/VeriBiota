{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VeriBiota EditDAG v1",
  "type": "object",
  "required": ["version", "nodes", "edges", "root"],
  "properties": {
    "version": { "const": "veribiota.edit_dag.v1" },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "depth", "prob"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "depth": { "type": "integer", "minimum": 0 },
          "prob": { "type": "number", "minimum": 0.0 }
        },
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["src", "dst", "prob"],
        "properties": {
          "src": { "type": "string", "minLength": 1 },
          "dst": { "type": "string", "minLength": 1 },
          "prob": { "type": "number", "minimum": 0.0 },
          "event_kind": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "root": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": false
}

